{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_user_new' %}

{% block main %}
    <h1>{{ 'title.admin_user_new'|trans }}</h1>

    {# {{ include('admin/user/_form.html.twig') }}  #}

    {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.notes) }}

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.admin_create_user'|trans }}
        </button>
        <a href="{{ path('admin_user_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
        </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {#  {{ show_source_code(_self) }} #} 
{% endblock %}
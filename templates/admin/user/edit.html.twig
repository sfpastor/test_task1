{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_user_edit' %}

{% block main %}
    <h1>{{ 'title.admin_user_edit'|trans({'%id%': user.id}) }}</h1>

    {{ include('admin/user/_form.html.twig', {
        form: form,
        button_label: 'action.save'|trans,
        include_back_to_home_link: true,
    }, with_context = false) }}
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('admin_user_show', {id: user.id}) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show_info'|trans }}
        </a>
    </div>
    {% if user.deleted is null %}
      <div class="section actions">
          {{ include('admin/user/_delete_form.html.twig', {user: user}, with_context = false) }}
      </div>
    {% endif %}
    {{ parent() }}

    {# {{ show_source_code(_self) }} #}
{% endblock %}